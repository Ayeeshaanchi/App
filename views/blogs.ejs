<style>
    ul.blog_cards {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 40px;
        margin: 35px;
    }

    .blog_cards .heading {
        margin-bottom: 15px;
        -webkit-transition: color 300ms cubic-bezier(.215, .61, .355, 1);
        transition: color 300ms cubic-bezier(.215, .61, .355, 1);
        font-family: 'DM Serif Display', sans-serif;
        color: #475874;
        font-size: 30px;
        line-height: 1.2em;
        font-weight: 400;
        text-align: center;
    }

    .blog_cards .heading:hover {
        color: var(--btn-secondary);
        cursor: pointer;
    }

    .blog_cards .para {
        font-family: Nunito, sans-serif;
        color: #475874;
        font-size: 17px;
        line-height: 1.8em;
        font-weight: 400;
        text-align: center;
    }

    .blog_cards .blog_container {
        display: flex;
        gap: 20px;
        flex-direction: column;
        align-items: center;
        border: 1px solid var(--btn-primary);
        border-radius: 8px;
        padding: 20px;
    }
</style>
<section>
    <ul class="blog_cards">
        <% blog_data.items.forEach(item=>{ %>
            <li class="blog_container">
                <img src="<%= item.image %>" alt="<%= item.price %>">
                <h2 class="heading">
                    <%= item.heading %>
                </h2>
                <p class="para">
                    <%= item.para %>
                </p>
                <%- include('button2', {text: "Read More"}) %>
            </li>
            <% }) %>
        </ul>
</section>
<style>
    .card {
        display: flex;
        margin-top: 40px;
        padding-right: 40px;
        padding-bottom: 45px;
        padding-left: 40px;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        border-radius: 5px;
        background-color: #eaf9fa;
        text-align: center;
    }

    .card .image {
        width: 78px;
        height: 78px;
        margin-top: -40px;
        border-style: solid;
        border-width: 2px;
        border-color: #fff;
        box-shadow: 0 20px 70px -10px rgba(10, 32, 70, 0.3);
        border-radius: 100px;
    }

    .card h3 {
        margin-top: 22px;
        margin-bottom: 15px;
        font-family: 'DM Serif Display', sans-serif;
        color: #0a2046;
        font-size: 24px;
        line-height: 1.2em;
        font-weight: 400;
    }

    .card p {
        margin-bottom: 18px;
        font-style: italic;
    }

    .cards .stars {
        display: flex;
        justify-content: center;
    }
</style>
